{
  "name": "pdf-generator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "sh scripts/build-with-count.sh",
    "start": "next start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:run": "vitest run",
    "format": "prettier . --write",
    "prelint": "prettier . --write",
    "lint": "sh scripts/lint-with-count.sh",
    "pdf": "tsx pdf.ts --resumeType=single-column",
    "pdf:anon": "tsx pdf.ts --anon --resumeType=single-column",
    "pdf:resume": "tsx pdf.ts --resumeType=single-column --print=resume",
    "pdf:cover": "tsx pdf.ts --resumeType=single-column --print=cover",
    "typecheck": "tsc",
    "prepare": "husky",
    "watch:data": "nodemon --exec \"node watcher.cjs\" --watch \"$PII_PATH/data.yml\" --watch data.yml",
    "yml-to-json": "tsx lib/ymlToJson.ts",
    "yml-to-json:watch": "nodemon --watch . --ext yml --exec 'tsx lib/ymlToJson.ts'",
    "init:multi-resume": "node scripts/init-multi-resume.js",
    "test:file-health": "node scripts/test-file-health.js"
  },
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-toast": "^1.2.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "diff": "^8.0.2",
    "dotenv": "^17.2.2",
    "js-yaml": "^4.1.0",
    "next": "^15.5.2",
    "next-themes": "^0.4.6",
    "pdfjs-dist": "^5.3.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.6.0",
    "yaml-loader": "^0.8.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@commitlint/types": "^20.0.0",
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.36.0",
    "@next/eslint-plugin-next": "^15.0.0",
    "@rushstack/eslint-patch": "^1.12.0",
    "@tailwindcss/postcss": "^4.0.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/diff": "^8.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^16.4.0",
    "husky": "^9.1.5",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.4",
    "prettier": "3.3.2",
    "puppeteer": "^23.4.1",
    "tailwindcss": "^4.0.5",
    "tsx": "^4.7.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.3"
  }
}
